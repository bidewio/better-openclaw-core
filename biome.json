{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noTemplateCurlyInString": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"files": {
		"includes": ["packages/**/*.ts", "packages/**/*.tsx"],
		"experimentalScannerIgnores": ["**/node_modules", "**/dist", "**/.next"]
	},
	"overrides": [
		{
			"includes": ["packages/web/**"],
			"linter": {
				"rules": {
					"security": {
						"noDangerouslySetInnerHtml": "off"
					},
					"a11y": {
						"noLabelWithoutControl": "warn",
						"noSvgWithoutTitle": "warn"
					},
					"suspicious": {
						"noArrayIndexKey": "warn"
					}
				}
			}
		}
	]
}
